<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 결과 타이틀 -->
        <TextView
            android:id="@+id/tvResultTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 결과"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- 체크리스트 점수 -->
        <TextView
            android:id="@+id/tvChecklistScoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="체크리스트 점수:" />

        <TextView
            android:id="@+id/tvChecklistScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- 바이오리듬 지수 -->
        <TextView
            android:id="@+id/tvBioIndexLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="바이오리듬 지수:" />

        <TextView
            android:id="@+id/tvBioIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- 최종 점수 -->
        <TextView
            android:id="@+id/tvFinalScoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최종 점수:" />

        <TextView
            android:id="@+id/tvFinalScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- 간단 차트 예시 (선형 차트) -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>